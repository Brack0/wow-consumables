{
  "additionalProperties": false,
  "type": "object",
  "properties": {
    "materials": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/Material"
      }
    },
    "$schema": {
      "type": "string"
    }
  },
  "required": [
    "$schema",
    "materials"
  ],
  "definitions": {
    "Material": {
      "type": "object",
      "properties": {
        "category": {
          "type": "string"
        },
        "idMaterial": {
          "type": "number"
        },
        "name": {
          "type": "string"
        },
        "profession": {
          "$ref": "#/definitions/Profession"
        },
        "effect": {
          "type": "string"
        },
        "specializations": {
          "type": "array",
          "items": {
            "enum": [
              "AGILITY",
              "ALL",
              "CLOTH",
              "HEALER",
              "INTELLECT",
              "LEATHER",
              "MAIL",
              "MELEE",
              "PLATE",
              "RANGED",
              "STAMINA",
              "STRENGTH",
              "TANK"
            ],
            "type": "string"
          }
        },
        "recipe": {
          "$ref": "#/definitions/Recipe"
        },
        "recipes": {
          "type": "object",
          "additionalProperties": false,
          "patternProperties": {
            "^[0-9]+$": {
              "$ref": "#/definitions/Recipe"
            }
          }
        }
      },
      "additionalProperties": false,
      "required": [
        "category",
        "idMaterial",
        "name"
      ]
    },
    "Profession": {
      "enum": [
        "ALCHEMY",
        "FOOD"
      ],
      "type": "string"
    },
    "Recipe": {
      "type": "object",
      "properties": {
        "rank": {
          "type": "number"
        },
        "craftNumber": {
          "type": "number"
        },
        "reagents": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/RecipeReagent"
          }
        }
      },
      "additionalProperties": false,
      "required": [
        "craftNumber",
        "reagents"
      ]
    },
    "RecipeReagent": {
      "type": "object",
      "properties": {
        "idMaterial": {
          "type": "number"
        },
        "amount": {
          "type": "number"
        }
      },
      "additionalProperties": false,
      "required": [
        "amount",
        "idMaterial"
      ]
    }
  },
  "$schema": "http://json-schema.org/draft-07/schema#"
}